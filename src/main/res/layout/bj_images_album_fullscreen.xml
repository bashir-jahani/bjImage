<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/GIAF_Base_Frame"
    tools:context=".bj_imagesAlbumFullScreenFragment" >

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/GIAF_VP_fullscreen_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="3dp"
        android:visibility="visible"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/GIAF_LL_fullscreen_content_controls_Up"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:background="@color/black_overlay"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp"
            tools:ignore="UselessParent">


            <TextView
                android:id="@+id/GIAF_TXV_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Member Profile Images"
                android:textColor="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/GIAF_TXV_ImageIndex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="1"
                    android:textColor="@color/white_overlay" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="/"
                    android:textColor="@color/white_overlay" />

                <TextView
                    android:id="@+id/GIAF_TXV_ImageNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="2"
                    android:textColor="@color/white_overlay" />

                <TextView
                    android:id="@+id/GIAF_TXV_Filename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:text="Member Profile Images"
                    android:textColor="@color/white_overlay" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/GIAF_LL_fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/GIAF_IMG_Back"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_revert" />

            <ImageView
                android:id="@+id/GIAF_IMG_Save"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_save" />

            <ImageView
                android:id="@+id/GIAF_IMG_New"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_add" />

            <ImageView
                android:id="@+id/GIAF_IMG_Share"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_share" />

            <ImageView
                android:id="@+id/GIAF_IMG_Delete"
                style="?metaButtonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@android:drawable/ic_menu_delete" />


        </LinearLayout>
    </FrameLayout>

</FrameLayout>
